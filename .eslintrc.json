{
	"parserOptions": {
		"ecmaVersion": 2018,
		"sourceType": "module"
	},
	"extends": [
		"eslint:recommended",
		"plugin:vue/recommended"
	],
	"rules": {
		"vue/html-indent": [
			"error",
			"tab"
		],
		"vue/component-name-in-template-casing": ["error", "kebab-case"],
		"vue/html-closing-bracket-newline": ["error", {
			"singleline": "never",
			"multiline": "never"
		}],
		"semi": [
			"error",
			"never"
		],
		"comma-dangle": [
			"error",
			"always-multiline"
		],
		"quotes": [
			"error",
			"single"
		]
	},
	"plugins": [
		"vue"
	],
	"env": {
		"node": true,
		"mocha": true
	}
}
